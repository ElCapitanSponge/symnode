{
    "root": true,
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parserOptions": {
                "project": [
                    "**/tsconfig.json"
                ]
            },
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/strict-type-checked"
            ],
            "plugins": [
                "@typescript-eslint"
            ],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "quotes": [
                    "error",
                    "double"
                ],
                "indent": [
                    "error",
                    4,
                    {"SwitchCase": 1}
                ]
            }
        }
    ]
}
